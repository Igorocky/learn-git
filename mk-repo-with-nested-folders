#!/bin/sh

REPONAME=$1

if [ -z "$REPONAME" ]; then
    echo "error: no arg"
    exit 1
fi

rm -r ./$REPONAME
mkdir ./$REPONAME

mkdir -p $REPONAME/dir1/dir3
echo text1 > $REPONAME/dir1/file1
echo text2 > $REPONAME/dir1/file2
echo text1 > $REPONAME/dir1/dir3/file1
echo text2 > $REPONAME/dir1/dir3/file2
mkdir $REPONAME/dir2
echo text1 > $REPONAME/dir2/file1
echo text2 > $REPONAME/dir2/file2

cd ./$REPONAME

git init
git status
